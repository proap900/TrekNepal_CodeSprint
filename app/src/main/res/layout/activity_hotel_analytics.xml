<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:text="Room Distribution"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSingleCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single: 0" />

        <TextView
            android:id="@+id/tvDoubleCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Double: 0" />

        <TextView
            android:id="@+id/tvSuiteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suite: 0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/tvAvailablePercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available: 0%"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/pbAvailable"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:progressTint="@android:color/holo_green_light"
            android:max="100" />

        <TextView
            android:id="@+id/tvBookedPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booked: 0%"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/pbBooked"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:progressTint="@android:color/holo_red_light"
            android:max="100" />

    </LinearLayout>
</ScrollView>
